<h1>Display everyone that signed up</h1>


<!-- This section of the code below is the simple input boxes for the page -->



<!-- With a Table for the display -->
  <table border="1" cellpadding = "5">
        <tr>
            <th> Name </th>
            <th> Email Address </th>
            <th> Destroy it? </th>
        </tr>

    

<% @users.each do |user| %>

  <tr> 
        <td><%= user.name %> </td>

        <td> <%= user.email %> </td>

        <td> <%= link_to 'Destroy', user, :confirm => 'Are you sure?',
                                        :method => :delete %> </td>
</tr>


  <% end %>  

  </table>

